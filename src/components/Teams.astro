---
import { Image } from "astro:assets"
import ContainerLayout from "./ContainerLayout.astro"
import Heading from "./Heading.astro"

const members = [
	{
		name: "Syahrul",
		image: "/images/members/01.png",
	},
	{
		name: "Tegar",
		image: "/images/members/02.png",
	},
	{
		name: "Ahlan",
		image: "/images/members/03.png",
	},
	{
		name: "Nasrul",
		image: "/images/members/04.png",
	},
	{
		name: "Renaldi",
		image: "/images/members/05.png",
	},
]
---

<ContainerLayout>
	<div class="flex flex-col space-y-6 md:space-y-12 py-32">
		<Heading title="Tim Kami" description="" />
		<div class="flex flex-col items-center w-full space-y-6">
			<div class="grid md:grid-cols-4 sm:grid-cols-2 gap-6">
				{
					members.map((member) => {
						return (
							<div class="flex flex-col rounded-sm p-3 border-2 border-black shadow-master">
								<Image
									width="100"
									height="100"
									src={member.image}
									alt={member.name}
									class={"w-48 h-48 bottom-0 object-contain aspect-square"}
								/>
								<div>
									<h3>{member.name}</h3>
								</div>
							</div>
						)
					})
				}
			</div>
		</div>
	</div>
</ContainerLayout>
