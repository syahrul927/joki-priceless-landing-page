---
import HighlightTitle from "./HighlightTitle.astro"

interface Props {
	title: string
	description: string
}
const { description, title } = Astro.props
---

<div class="flex md:space-x-6 md:flex-row flex-col">
	<h2 class="max-w-md w-fit h-fit">
		<HighlightTitle>{title}</HighlightTitle>
	</h2>
	<p class="max-w-lg">{description}</p>
</div>
