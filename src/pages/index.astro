---
import "@fontsource-variable/space-grotesk"
import FormRequest from "@/components/react/FormRequest"
import Header from "@/components/Header.astro"
import { Toaster } from "@/components/ui/toaster"
import "@/styles/globals.css"
import Hero from "@/components/Hero.astro"
import Partnership from "@/components/Partnership.astro"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<Header />
		<main class="container max-w-screen-xl py-12">
			<Hero />
			<Partnership />
			<div class="max-w-screen-xl flex flex-col space-y-6">
				<div class="w-full py-4">
					<h1 class="font-semibold text-6xl">Request Pembuatan</h1>
				</div>
				<FormRequest client:visible />
			</div>
			<Toaster client:visible />
		</main>
	</body>
</html>
